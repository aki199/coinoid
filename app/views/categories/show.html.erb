<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @category.desc %>
</p>
<h3> Posts under this category </h3>
<% Posts.where(category_id: @category.id).each do |post| %>
<li> <%= post.title %> </li>
<% end %>

<%= link_to 'Edit', edit_category_path(@category) %> |
